{
  "name": "neuronutrition-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9",
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions",
    "api"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:patient-spa": "pnpm -C apps/patient-spa dev",
    "dev:practitioner-spa": "pnpm -C apps/practitioner-spa dev",
    "dev:functions": "pnpm -C functions serve",
    "build:run": "pnpm -C api build",
    "deploy:run": "gcloud run deploy api --source=api --region=europe-west1 --allow-unauthenticated",
    "deploy:run:patient": "gcloud run deploy patient-app --source=apps/patient --region=europe-west1 --allow-unauthenticated",
    "deploy:run:practitioner": "gcloud run deploy practitioner-app --source=apps/practitioner --region=europe-west1 --allow-unauthenticated",
    "build": "pnpm --filter web build && pnpm --filter functions build || exit 0",
    "build:web": "pnpm -C apps/patient-spa build && pnpm -C apps/practitioner-spa build",
    "lint": "pnpm --filter web lint || true",
    "test": "pnpm --filter web test || true",
    "format": "pnpm --filter web format || true",
    "extract": "node scripts/extract_pdf_text.mjs",
    "extract:mode": "node scripts/extract_pdf_text.mjs 'Mode de vie'",
    "deploy:hosting:patient": "firebase deploy --only hosting:patient",
    "deploy:hosting:practitioner": "firebase deploy --only hosting:practitioner"
  },
  "devDependencies": {
    "firebase-admin": "^12.7.0",
    "firebase-tools": "^14.20.0",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.296"
  }
}
