{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "web",
      "public": "apps/web/out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { "source": "**", "function": "webapp" }
      ]
    },
    {
      "target": "patient",
      "public": "apps/patient-spa/dist",
      "ignore": [
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { "source": "/api/**", "function": "api" },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "target": "practitioner",
      "public": "apps/practitioner-spa/dist",
      "ignore": [
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { "source": "/api/**", "function": "api" },
        { "source": "**", "destination": "/index.html" }
      ]
    }
  ],
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "hosting": {
      "port": 5001
    },
    "functions": {
      "port": 5002
    },
    "firestore": {
      "port": 5003
    },
    "auth": {
      "port": 5004
    },
    "storage": {
      "port": 5005
    },
    "ui": {
      "enabled": true,
      "port": 5000
    },
    "tasks": {
      "port": 9499
    },
    "singleProjectMode": true
  }
}
